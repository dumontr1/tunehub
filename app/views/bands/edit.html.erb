<div>
  <div class="d-flex justify-content-between bg-white p-sticky-top">
    <div class="my-auto pl-5 pages-title">
      <h4>Band settings</h4>
    </div>
    <div class="d-flex justify-content-between">
      <div class="m-2 pr-3">
        <%= link_to "Back", :back, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="container card-form">
    <div class="form">
      <%= simple_form_for(@band) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo,
                    as: :file,
                    required: true %>
        <%= f.submit class: "btn btn-primary"%>
        <h2 class='mt-5'>Members</h2>
            <% @members.each do |member| %>
            <ul>
            <%= @users.find(member.user_id).nickname %>
            </ul>
            <% end %>
      <% end %>
    </div>
  </div>
</div>
