<div>
  <div class="d-flex justify-content-between bg-white">
    <div class="m-3">
      <h4>Dashboard</h4>
    </div>
    <div class="m-3">
      <form method="get" action="/bands/new">
        <div><input value="New band" type="submit" class="btn btn-primary" /></div>
      </form>
    </div>
  </div>

  <div class="container mt-5">
    <div class="cards">
      <% @user_bands.each do |user_band| %>
        <%= link_to band_path(user_band.id) do %>
          <div class="card-band">
            <%= cl_image_tag user_band.photo.key %>
            <div class="card-band-infos">
              <div>
                <h3><%= user_band.name %></h3>
              </div>
              <%= 'Membres' %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
