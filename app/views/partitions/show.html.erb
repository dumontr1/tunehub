<div>
  <div class="d-flex justify-content-between bg-white p-sticky-top">
    <div class="my-auto pl-5 pages-title">
      <h4><%= @band.name %> > <%= Song.find(params[:song_id]).name %> > <%= @partition.title %></h4>
    </div>
    <div class="m-2 pr-3">
      <%= link_to "Edit partition", edit_song_partition_path(@partition.song_id, @partition.id), class: "btn btn-primary" %>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <div class="container mt-5">
          <h1><%= @partition.title %></h1>
          <%= @partition.instrument %>
        </div>
      </div>
      <div class="col-4 mb-3 ">
          <div class="card-form mt-5 p-4">
            <div class="form">
              <h3 class="pb-3">Comments (<%= @comments.count %>)</h2>
              <ul style="list-style-type: none;" class="p-0">
                <% @comments.each do |comment| %>
                    <li>
                      <div class="d-flex">
                        <div class="align-self-center"><%= cl_image_tag comment.user.photo.key, class: "avatar mr-2" %></div>
                        <div class="card-body bg-gray text-dark-gray rounded-pill align-self-center p-2">
                          <div class="d-flex justify-content-between">
                            <div class="p-3">
                              <%= comment.content %>
                            </div>
                            <ul style="list-style-type: none;" class="p-0">
                              <% @responses.each do |response| %>
                                  <li>
                                    <div class="d-flex">
                                      <div class="align-self-center"><%= cl_image_tag response.user.photo.key, class: "avatar mr-2" %></div>
                                      <div class="card-body bg-gray text-dark-gray rounded-pill align-self-center p-2">
                                        <div class="d-flex justify-content-between">
                                          <div class="p-3">
                                            <%= response.content %>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                    <div class="d-flex flex-row-reverse mb-3">
                                      <div><%= response.created_at.in_time_zone("Paris").to_formatted_s(:long) %></div>
                                    </div>
                                  </li>
                              <% end %>
                            </ul>
                            <p>
                              <a class="badge bg-gray" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample"><i class="fas fa-reply text-light"></i></a>
                            </p>
                            <div class="collapse" id="collapseExample">
                              <div class="card card-body">
                                <%= simple_form_for([comment, @response]) do |f| %>
                                  <%= f.input :content, placeholder: 'Add a response', label:false  %>
                                  <div class="d-flex justify-content-end">
                                    <%= f.submit class: "btn btn-primary", value: "Sand" %>
                                  </div>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="d-flex flex-row-reverse mb-3">
                        <div><%= comment.created_at.in_time_zone("Paris").to_formatted_s(:long) %></div>
                      </div>
                    </li>
                <% end %>
              </ul>
                <%= simple_form_for([@partition, @comment]) do |f| %>
                  <%= f.input :content, placeholder: 'Add new comment', label:false %>
                  <div class="d-flex justify-content-end">
                    <%= f.submit class: "btn btn-primary", value: "Sand" %>
                  </div>
                <% end %>
            </div>
          </div>
      </div>
    </div>

</div>
