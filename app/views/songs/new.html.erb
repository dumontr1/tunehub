<div>
  <div class="d-flex justify-content-between bg-white p-sticky-top border-bottom">
    <div class="my-auto pl-5 pages-title">
      <h4>Create a new project</h4>
    </div>
    <div class="d-flex justify-content-between">
      <div class="m-2 pr-3">
        <%= link_to "Back", :back, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="card-form m-5">
    <div class="form">
      <%= simple_form_for [@band, @song] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.submit "Create Project", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
