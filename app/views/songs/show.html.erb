<div>
  <div class="d-flex justify-content-between bg-white">
    <div class="m-2 pl-5">
      <h4>Partitions - <%= @song.name %></h4>
    </div>
    <div class="d-flex justify-content-between">
      <div class="m-2 pr-1">
        <form method="get" action="/songs/<%= @song.id %>/partitions/new">
          <div><input value="New partition" type="submit" class="btn btn-primary" /></div>
        </form>
      </div>
      <div class="m-2 pr-3">
        <form method="get" action="/bands/new">
          <div><input value="Song settings" type="submit" class="btn btn-primary" /></div>
        </form>
      </div>
    </div>
  </div>
  <div class="container-cards-partitions">
    <% @partitions.each do |partition| %>
      <%= link_to song_partition_path(partition.song_id, partition.id) do %>
        <div class="card-partition">
          <div class="row">
            <div class="col col-infos">
              <div class="card-partition-infos">
                <h2><%= partition.title %></h2>
                <p>Product description with <strong>relevant info</strong> only.</p>
              </div>
            </div>
            <div class="col col-image">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
