<div>
  <div class="d-flex justify-content-between bg-white">
    <div class="m-2 pl-5">
      <h4>Partitions - <%= @song.name %></h4>
    </div>
    <div class="d-flex justify-content-between">
      <div class="m-2 pr-1">
        <%= link_to "New partition",  new_song_partition_path(@song.id), class: "btn btn-primary" %>
      </div>
      <div class="m-2 pr-3">
        <form method="get" action="/bands/new">
          <div><input value="Song settings" type="submit" class="btn btn-primary" /></div>
        </form>
      </div>
    </div>
  </div>
  <div class="song-card-container">
    <% @partitions.each do |partition| %>
      <%= link_to song_partition_path(partition.song_id, partition.id) do %>
        <div class="card-song">
          <div class="d-flex flex-nowrap">
            <div class="align-self-start">
              <h3><%= partition.title %></h3>
              <p><%= partition.instrument %></p>
            </div>
            <div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
